datasource db {
  provider = "postgresql"
  url      = "postgresql://postgres:sempresolidi@localhost:5432/formazione"
}

generator client {
  provider = "prisma-client-js"
}

model Product {
  id         String    @id @default(uuid())
  name       String
  weight     Int
  brand      String?
  price      Int
  createdAt  DateTime  @default(now())
  Category   Category? @relation(fields: [categoryId], references: [id])
  categoryId String?
}

model Category {
  id          String    @id @default(uuid())
  name        String
  description String?
  Product     Product[]
}

model User {
  id       String  @id @default(uuid())
  name     String?
  mail     String
  password String
}
